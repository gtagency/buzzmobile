<launch>
    <arg name="world" default="worlds/empty.world"/>

    <param name="/use_sim_time" value="true" />

    <node name="gazebo" pkg="gazebo_ros" type="gzserver" respawn="false" output="screen"
          args="-e ode $(arg world)" required="false"/>

    <node name="gazebo_gui" pkg="gazebo_ros" type="gzclient" respawn="false" output="screen" required="true"/>

    <node pkg="rr_platform" type="scanToPointCloud" name="scanToPointCloud" output="screen" />

    <include file="$(find rr_platform)/launch/speedi_state_publisher.launch" />

    <node name="controller_spawner" pkg="rr_gazebo" type="controller_spawner.py" respawn="false" output="screen"
          args="joint_state_controller left_wheel_effort_controller right_wheel_effort_controller
            left_steer_position_controller right_steer_position_controller camera_height_position_controller
            camera_tilt_position_controller --shutdown-timeout 1"/>
    <rosparam file="$(find rr_gazebo)/config/speedi_control.yaml" command="load"/>

    <node name="sim_controller" pkg="rr_gazebo" type="speedi_controller" respawn="false" output="screen" />

    <group ns="camera">
        <node pkg="nodelet" type="nodelet" name="rectify" output="screen" args="standalone image_proc/rectify">
            <remap from="image_mono" to="image_raw" />
        </node>
    </group>

    <node name="spawn_platform_script" pkg="rr_gazebo" type="spawn_speedi_platform.sh" />
</launch>